= render 'layouts/header'
.memo-edit
  .memo-edit__box
    = form_for @memo do |f|
      = f.text_field :title, class: "new_memo__title", placeholder: " 見出し"
      = f.text_area :body, class: "new_memo__body"
      .new_memo__btn
        = f.submit "更新", class: "new_memo__btn__save"
        = link_to "削除", memo_path(@memo.id),method: :delete, class: "new_memo__btn__delete"