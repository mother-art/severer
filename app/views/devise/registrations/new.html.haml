= render 'layouts/header'
.signup-page
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .input
      .input__name お名前
      = f.text_field :name, class: "form", id: "form_name"
    .input
      .input__age 年齢
      = f.number_field :age, class: "form"
    .input
      .input__email E-mail
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form"
    .input
      .input__password パスワード
      = f.password_field :password, autocomplete: "new-password", class: "form"
    .input
      .input__password-check パスワード（確認）
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form"
    .submit
      = f.submit "登録", class: "submit__btn"